<%include partials/header%>

<div class="ui main text container segment">
	<div class="ui huge header"><%=blog.title%></div>

	<form class="ui form" action="/blogs/<%=blog.id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="Title" value="<%=blog.title%>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" placeholder="Image URL" value="<%=blog.image%>">
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]" placeholder="Put your text here"><%-blog.body%></textarea>
		</div>
		<input class="ui pink basic button" type="submit" name="submit" value="Submit">
	</form>
</div>

<%include partials/footer%>